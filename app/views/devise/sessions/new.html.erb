<div class="main-w3layouts wrapper">
  <h1>Sign In</h1>
  <br />

<div class="main-agileinfo">
  <div class="agileits-top">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.input :email, required: false, autofocus: true, placeholder: "Email", class: "text" %>
      <%= f.input :password, required: false, placeholder: 'password', class: "text" %>
    </div>
    <br />
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <br />
  <p><%= render "devise/shared/links" %></p>
</div>