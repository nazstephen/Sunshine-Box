<div class="container booyah-box user-profile">  
  <div class="row">
  	<div class="col-3"></div>
      <div class="col-6">	
      	 <%= form_with url: user_profile_path, id: "video-subscription-form" do %>

	      <div class="field">
	      	<label>Phone Number </label>
	        <input type="text" class="text" name="phone_number" value="923233323" />
	      </div>
	      <br/>
	      <div class="field">
	      	<label>Password </label>
	        <input type="password" class="text" name="password" value="123456" />
	      </div>
	      <br />
	      <div class="field">
	      	<label>Box ID </label>
	        <input type="text" class="text" name="user_name" value="Customer" />
	      </div>

	      
	     <% end %>
      </div>  
  </div>
  	<div  class="ml-5">
  		<h2>Minutes: <span id="minutes">0</span></h2>
	  	<div class="slidecontainer m-4">
		 	<input type="range" min="1" max="100" value="2" class="slider" id="myRange">
	 		
		</div>
		<h2>Amounts: <span id="amounts">0</span></h2>
	</div>
	<div class="row">
  		<div class="col-3"></div>
      	<div class="col-6">
			<div class="actions">
		    	<input type="submit" class="btn btn-primary" style="width: 95%;"/>
			</div>
		</div>
	</div>
</div>
